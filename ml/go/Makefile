# Makefile for gopy pkg generation of python bindings to game
# File is generated by gopy (will not be overwritten though)
# gopy pkg -exclude=model,ml1,ml2,moveml ../../internal/game ../../internal/bot context encoding/json

PYTHON=python
PIP=$(PYTHON) -m pip

all: gen

install: install-pkg install-exe

gen:
	gopy pkg -no-make -exclude=model,ml1,ml2,moveml ../../internal/game ../../internal/bot context encoding/json

build:
	$(MAKE) -C game build

install-pkg:
	# this does a local install of the package, building the sdist and then directly installing it
	rm -rf dist build */*.egg-info *.egg-info
	$(PYTHON) setup.py sdist
	$(PIP) install dist/*.tar.gz

install-exe:
	# install executable into /usr/local/bin
	cp game/pygame /usr/local/bin/

